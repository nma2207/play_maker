<GridPane alignment="center" hgap="10" prefHeight="488.0" prefWidth="500.0" vgap="10" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.Controller">
    <columnConstraints>
        <ColumnConstraints />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints />
    </rowConstraints>
    <children>
        <Pane prefHeight="529.0" prefWidth="500.0">
            <children>
                <Label layoutX="83.0" layoutY="35.0" text="Произвести поиск похожих песен">
                    <font>
                        <Font size="20.0" />
                    </font>
                </Label>
                <TextField fx:id="mysinger" layoutX="36.0" layoutY="90.0" prefHeight="37.0" prefWidth="281.0" promptText="Введите исполнителя">
                    <font>
                        <Font size="16.0" />
                    </font>
                </TextField>
                <Button fx:id="btn_msg" layoutX="337.0" layoutY="139.0" mnemonicParsing="false" onAction="#Search" prefHeight="38.0" prefWidth="86.0" text="Поиск">
                    <font>
                        <Font size="17.0" />
                    </font>
                </Button>
                <TableView fx:id="myTable" editable="true" layoutX="39.0" layoutY="193.0"  prefHeight="210.0" prefWidth="394.0">
                    <columns>
                        <TableColumn fx:id="tableSinger" prefWidth="144.0" text="Исполнитель" />
                        <TableColumn fx:id="tableSong" prefWidth="142.0" text="Название" />
                        <TableColumn fx:id="tableGenre" prefWidth="106.0" text="Жанр" />
                    </columns>
                </TableView>
                <Button layoutX="41.0" layoutY="421.0" mnemonicParsing="false" onAction="#SetSong" prefHeight="38.0" prefWidth="205.0" text="Добавить новый трек">
                    <font>
                        <Font size="17.0" />
                    </font>
                </Button>
                <Button layoutX="285.0" layoutY="421.0" mnemonicParsing="false" onAction="#Playplay" prefHeight="39.0" prefWidth="65.0" text="♪►">
                    <font>
                        <Font size="18.0" />
                    </font>
                </Button>
                <TextField fx:id="mysong" layoutX="36.0" layoutY="140.0" prefHeight="37.0" prefWidth="281.0" promptText="Введите название песни">
                    <font>
                        <Font size="16.0" />
                    </font>
                </TextField>
                <Button layoutX="368.0" layoutY="420.0" mnemonicParsing="false" onAction="#Pause" prefHeight="39.0" prefWidth="65.0" text="■" />
            </children>
        </Pane>
    </children>
</GridPane>
