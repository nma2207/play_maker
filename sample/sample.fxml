<?import javafx.scene.text.Font?>

<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
   <columnConstraints>
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
   </rowConstraints>
   <children>
      <Pane prefHeight="445.0" prefWidth="512.0">
         <children>
            <Label layoutX="53.0" layoutY="35.0" text="Произвести поиск по">
               <font>
                  <Font size="20.0" />
               </font>
            </Label>
            <MenuButton layoutX="284.0" layoutY="31.0" mnemonicParsing="false" text="выбрать">
              <items>
                <MenuItem mnemonicParsing="false" onAction="#SearchSinger" text="Исполнителю" />
                <MenuItem mnemonicParsing="false" onAction="#SearchGenre" text="Жанру" />
                  <MenuItem mnemonicParsing="false" onAction="#SearchSong" text="Песне" />
              </items>
               <font>
                  <Font size="16.0" />
               </font>
            </MenuButton>
            <TextField fx:id="myquestion" layoutX="36.0" layoutY="90.0" prefHeight="37.0" prefWidth="281.0" promptText="Введите">
               <font>
                  <Font size="16.0" />
               </font>
            </TextField>
            <Button fx:id="btn_msg" layoutX="337.0" layoutY="90.0" mnemonicParsing="false" onAction="#Search" prefHeight="38.0" prefWidth="86.0" text="Поиск">
               <font>
                  <Font size="17.0" />
               </font>
            </Button>
            <TableView layoutX="39.0" layoutY="153.0" prefHeight="210.0" prefWidth="394.0">
              <columns>
                <TableColumn prefWidth="154.0" text="Исполнитель" />
                <TableColumn prefWidth="102.0" text="Жанр" />
                  <TableColumn prefWidth="136.0" text="Песня" />
              </columns>
            </TableView>
            <Button layoutX="36.0" layoutY="381.0" mnemonicParsing="false" onAction="#SetSong" text="Добавить новый трек">
               <font>
                  <Font size="17.0" />
               </font>
            </Button>
            <Button layoutX="269.0" layoutY="381.0" mnemonicParsing="false" onAction="#OtherSongs" text="Вывести похожие">
               <font>
                  <Font size="18.0" />
               </font>
            </Button>
         </children>
      </Pane>
   </children>
</GridPane>
